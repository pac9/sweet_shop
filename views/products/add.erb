
<form action="/products" method="post">

  <label for ="product-name">Product:</label>
  <input type="text" name="product" id="product-name"/>
  <br>
  <br>

  <label for ="description">Description:</label>
  <input type="text" name="description" id="description"/>
  <br>
  <br>

  <label for ="stock-quantity">Stock:</label>
  <input type="number" name="stock_quantity" id="stock-quantity" min="0"/>
  <br>
  <br>

  <label for ="buying-cost">Buying cost (pence):</label>
  <input type="number" name="buying_cost" id="buying-cost" min="0"/>
  <br>
  <br>

  <label for ="selling-price">Selling price (pence):</label>
  <input type="number" name="selling_price" id="selling-price" min="0"/>
  <br>
  <br>

  <label for ="supplier">Supplier:</label>
  <select name="supplier_id">
     <% for supplier in @suppliers %>
   <option value=<%= supplier.id %>><%= supplier.name %></option>
   <% end %>
  </select>
  <br>
  <br>

  <input class="submit" type="submit" value="Submit">

</form>
