<h3>Products in stock <a class="btn-add" href="/products/add">Add</a>
</h3>


<table>
  <tr>
    <th>Product</th>

    <th>Description</th>

    <th>Stock Quantity</th>

    <th>Buying cost (£)</th>

    <th>Selling price (£)</th>

    <th>Mark-up</th>

    <th>Supplier</th>

    <th>Stock level warnings</th>


  </tr>
  <% for product in @products %>
  <tr>
    <td><%= product.product %></td>

    <td><%= product.description %></td>

    <td class="number"><%= product.stock_quantity %></td>

    <td class="number"><%= product.buying_cost/100.round(2) %></td>

    <td class="number"><%= product.selling_price/100.round(2) %></td>

    <td class="number"><%= product.mark_up/100.round(2) %></td>

    <td><a href= "/suppliers"><%= product.supplier.name %></a></td>

    <td>
       <%= product.stock_level %>
    </td>

    <td><a href="/products/<%= product.id %>/edit">Edit</td>

    <td><a href="/products/<%= product.id %>/delete">Delete</a></td>


  </tr>
  <% end %>



</table>
