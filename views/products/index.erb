<h2>Products in stock</h2>


<table>
  <tr>
    <th>Product</th>

    <th>Description</th>

    <th>Stock Quantity</th>

    <th>Buying cost (£)</th>

    <th>Selling price (£)</th>

    <th>Supplier</th>

    <th>Comments</th>


  </tr>
  <% for product in @products %>
  <tr>
    <td><%= product.product %></td>

    <td><%= product.description %></td>

    <td><%= product.stock_quantity %></td>

    <td><%= product.buying_cost/100.round(2) %></td>

    <td><%= product.selling_price/100.round(2) %></td>

    <td><a href= "/suppliers"><%= product.supplier.name %></a></td>

    <td>

    </td>

    <td><a href="/products/<%= product.id %>/edit">Edit</td>

    <td><a href="/products/<%= product.id %>/delete">Delete</a></td>


  </tr>
  <% end %>



</table>
